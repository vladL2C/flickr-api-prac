<%= form_tag("/", method: "get") do %>
  <%= label_tag(:user_id, "Search for:") %>
  <%= text_field_tag(:user_id, nil , placeholder: "enter user id") %>
  <%= submit_tag("Search") %>
<% end %>  

<% if params[:user_id].nil? %>
  <%= render 'flickr/unavailable' %>
<% elsif %>  
  <%= sidebar_widget(params[:user_id]) %>
<% else %>
  <% flickr_id = user_name_to_id(params[:user_id]) %>
  <%= sidebar_widget(flickr_id) %>
<% end %>



